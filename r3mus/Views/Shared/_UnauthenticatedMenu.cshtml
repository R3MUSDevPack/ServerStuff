<li class="dropdown" id="AboutMenuLi" onmouseover="AboutMenu_MouseOver()" onmouseout="AboutMenu_MouseOut()">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown">About <span class="caret"></span></a>
    <ul class="dropdown-menu" id="AboutMenu" onmouseover="AboutMenu_MouseOver()" onmouseout="AboutMenu_MouseOut()">

        <li>@Html.ActionLink("About Us", "About", "Home")</li>

        <li>@Html.ActionLink("Meet The Wolves", "Wolves", "Home")</li>

    </ul>

</li>

