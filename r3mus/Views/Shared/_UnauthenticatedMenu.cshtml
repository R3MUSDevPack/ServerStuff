<script type="text/javascript">

    function AboutMenu_MouseOver() {
        if (($("#AboutMenuLi").is(":hover") == true) || ($("#AboutMenu").is(":hover") == true)) {
            $('#AboutMenu').finish().slideDown('fast');
        }
    }

    function AboutMenu_MouseOut() {
        $('#AboutMenu').finish().slideUp('fast');
    }

</script> 