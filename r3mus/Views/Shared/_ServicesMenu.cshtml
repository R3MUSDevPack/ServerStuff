<li class="dropdown" id="servicesMenuLi" onmouseover="servicesMenu_MouseOver()" onmouseout="servicesMenu_MouseOut()">
    <a href="#" class="dropdown-toggle" onmouseover="servicesDropdown()" data-toggle="dropdown">Services <span class="caret"></span></a>
    <ul class="dropdown-menu" id="servicesMenu" onmouseover="servicesMenu_MouseOver()" onmouseout="servicesMenu_MouseOut()">
        <li><a href="https://r3mus.slack.com" target="_blank">Slack</a></li>
        <li><a href="http://www.nerfedalliance.com/" target="_blank">NAGA</a></li>
        <li><a href="http://coalition.redalliance.pw" alt="Coalition" target="_blank">RED Menace</a></li>
        <li><a href="http://remus.fleet-up.com/" target="_blank">Fleet-Up</a></li>
        <li>@Html.ActionLink("Logistics", "ContractStatus", "Logistics")</li>
        <li>@Html.ActionLink("Forums", "RedirectToForum", "LoggedInHome")</li>
    </ul>
</li>

<script type="text/javascript">

    function servicesMenu_MouseOver() {
        if (($("#servicesMenuLi").is(":hover") == true) || ($("#servicesMenu").is(":hover") == true)) {
            $('#servicesMenu').finish().slideDown('fast');
        }
    }

    function servicesMenu_MouseOut() {
        $('#servicesMenu').finish().slideUp('fast');
    }

</script>

