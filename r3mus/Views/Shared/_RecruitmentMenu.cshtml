@if (User.IsInRole("Admin") || User.IsInRole("Director") || User.IsInRole("CEO") || User.IsInRole("Recruiter") || User.IsInRole("Screener"))
{
    <li class="dropdown" id="recruitmentMenuLi" onmouseover="recruitmentMenu_MouseOver()" onmouseout="recruitmentMenu_MouseOut()">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Recruitment <span class="caret"></span></a>
        <ul class="dropdown-menu" id="recruitmentMenu" onmouseover="recruitmentMenu_MouseOver()" onmouseout="recruitmentMenu_MouseOut()">

            <li>@Html.ActionLink("Recruitment Home", "Home", "Recruitment")</li>

            <li>@Html.ActionLink("Add Names", "AddNames", "Recruitment")</li>

            @if (User.IsInRole("Admin") || User.IsInRole("Director") || User.IsInRole("CEO") || User.IsInRole("Screener") || User.IsInRole("Recruiter"))
            {
                <li>@Html.ActionLink("Get Names", "GetNames", "Recruitment")</li>
            }

            @if (User.IsInRole("Admin") || User.IsInRole("Director") || User.IsInRole("CEO") || User.IsInRole("Screener"))
            {
                <li>@Html.ActionLink("Review Outstanding Applications", "ShowApplications", "Recruitment")</li>
                <li>@Html.ActionLink("Review Completed Applications", "ShowApplications", "Recruitment", new { review = true }, null)</li>
            }
        </ul>

    </li>

    <script type="text/javascript">

        function recruitmentMenu_MouseOver() {
            if (($("#recruitmentMenuLi").is(":hover") == true) || ($("#recruitmentMenu").is(":hover") == true)) {
                $('#recruitmentMenu').finish().slideDown('fast');
            }
        }

        function recruitmentMenu_MouseOut() {
            $('#recruitmentMenu').finish().slideUp('fast');
        }

    </script>    
}