<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Raised By Wolves</title>
    <link rel="shortcut icon" href="@Url.Content("~/Images/favicon.ico")" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Raised By Wolves Inc [R3MUS]", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        Html.RenderPartial("_AuthenticatedMenu");
                    }
                    else
                    {
                        Html.RenderPartial("_UnauthenticatedMenu");
                    }
                    @{Html.RenderPartial("_SharedMenu");}
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content">

    <div class="jumbotron">
        <img src="@Url.Content("~/Images/logo.png")" alt="R3MUS" style="width:250px; height: 250px; float:right;" />
        <h1 style="font-family:xirod;">Raised By Wolves Inc</h1>
        <p class="lead">A Nullsec Sovereignty warfare & pilot training corporation in Eve Online.</p>
        <br />
    </div>

        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Raised By Wolves</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <link rel="stylesheet" href="//code.jquery.com/ui/1.11.4/themes/smoothness/jquery-ui.css">
    <script src="//code.jquery.com/jquery-1.10.2.js"></script>
    <script src="//code.jquery.com/ui/1.11.4/jquery-ui.js"></script>
    <link rel="stylesheet" href="/resources/demos/style.css">
    @RenderSection("scripts", required: false)
</body>
</html>
