@model r3mus.ViewModels.ForumViewModel
@{
    ViewBag.Title = "Create Forum";
}
<body>
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h4>Forum</h4>
            <hr />
            @Html.ValidationSummary(true)
    
            <div class="form-group">
                @Html.LabelFor(model => model.Forum.Title, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Forum.Title)
                    @Html.ValidationMessageFor(model => model.Forum.Title)
                </div>
                <div class="col-md-10">                    
                    @Html.DropDownListFor(model => model.Forum.MinimumRole, Model.RoleList, "Select")
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
    <div>
        @Html.ActionLink("Back to List", "AdminIndex")
    </div>
</body>
