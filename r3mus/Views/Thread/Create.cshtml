@model r3mus.Models.Thread

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Thread</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.HiddenFor(model => Model.ForumID)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Title, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Title)
                @Html.ValidationMessageFor(model => model.Title)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Posts.FirstOrDefault().Title, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Posts.FirstOrDefault().Title)
                @Html.ValidationMessageFor(model => model.Posts.FirstOrDefault().Title)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Posts.FirstOrDefault().Body, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Posts.FirstOrDefault().Body, new { @style = "width: 500px; height:200px; max-width:1000px;" })
                @Html.ValidationMessageFor(model => model.Posts.FirstOrDefault().Body)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

