@model r3mus.ViewModels.ApplicantViewModel

@{
    ViewBag.Title = "Apply";
}

<h2>Many thanks for your interest in Raised By Wolves Inc.</h2>
<p>
    Before completing this application form please make sure you read the @Html.ActionLink("About", "About", "Home") section of this site to make sure that we are the right corp for you. The @Html.ActionLink("About", "About", "Home") page covers our corp philosophy, what we will do for you and what we expect from you in return so it is important.
</p>
<p>
    Once you have completed the form below, one of our screeners will take a look at your application and send you an invitation to join our corp. We aim to do this within 24 hours but please be patient.
</p>
<p>
    Occasionally we may need to talk to you if an issue comes up in the screening process. We will either do this via in-game chat or on Teamspeak.
</p>
<p>
    As soon as you have joined Raised By Wolves Inc you will receive an in-game mail explaining how to join our services, how to find out all the information you will need to be able to join us and how to get help from us if you get stuck or need advice.
</p>
<p>
    Once you have submitted your application, come and say hello in our <a href="https://www.hipchat.com/gp2LCgtnC" onclick="window.open('https://www.hipchat.com/gp2LCgtnC', 'newwindow', 'width=800, height=500'); return false;">Public Channel</a>.
</p>
<p>
    If you currently have a trial account, or wish to start a new account, try our buddy invite program. If you choose to pay to upgrade to a full account from this &Aacute; are a member of Raised By Wolves Inc, we will give a reward (25% of the current sell price of the PLEX). This is only availably for paid upgrades, not PLEXed upgrades.
    <br/>
    If this sounds good (PLEX prices tend to be between 800 million ISK &Aacute; 1 Billion ISK), click <a href="https://secure.eveonline.com/trial/?invc=ad920170-713d-497a-8446-9041d7800d7d&action=buddy" onclick="window.open('https://secure.eveonline.com/trial/?invc=ad920170-713d-497a-8446-9041d7800d7d&action=buddy', 'newwindow', 'width=1000, height=800'); return false;">here</a>.
</p>
@if (ViewBag.Message != string.Empty)
{
    <div class="alert-warning col-md-8">
        @ViewBag.Message
    </div>
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.UserName, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.UserName)
                @Html.ValidationMessageFor(model => model.UserName)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Email, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email)
                @Html.ValidationMessageFor(model => model.Email)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TimeZone, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.TimeZone, Model.TimeZones)
            </div>
        </div>

        <div class="form-group float-right">
            <div class="col-md-8 alert-info">
                If you do not have a full API Key set up (with an access mask of @ViewBag.FullAccessMask) please do so now. You can click the button on the right to create one, and set the expiry to 1 week from today. We recommend naming it something to differentiate it from other keys, such as "R3MUS_1". Please ensure you have set the character option to 'All'.
                <br/>
                Click <a href="/Recruitment/APIScreenshot" style="font-weight:bold;" onclick="window.open('/Recruitment/APIScreenshot', 'newwindow', 'width=800, height=500'); return false;">here</a> for a screenshot of how this should look.
            </div>
            <table>
                <tr>
                    <td><div class="col-md-4"><a href="https://community.eveonline.com/support/api-key/CreatePredefined?accessMask=@ViewBag.FullAccessMask" class="btn btn-default" target="_blank">Create API</a></div></td>
                </tr>
            </table>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.ApiKey, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ApiKey)
                @Html.ValidationMessageFor(model => model.ApiKey)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.VerificationCode, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.VerificationCode)
                @Html.ValidationMessageFor(model => model.VerificationCode)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Age, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Age)
                @Html.ValidationMessageFor(model => model.Age)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ToonAge, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ToonAge)
                @Html.ValidationMessageFor(model => model.ToonAge)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Source, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Source)
                @Html.ValidationMessageFor(model => model.Source)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Information, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Information, new { style = "max-width:1000px; width: 500px; height:200px; max-width:100%;" })
                @Html.ValidationMessageFor(model => model.Information)
            </div>
        </div>

        <div class="form-group">
            <h3>Rules &amp; Regs</h3>
            <p>By applying for membership, you agree to the following:</p>            
            @{Html.RenderPartial("_Rules");}
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Apply" class="btn btn-default" />
            </div>
        </div>
    </div>
}

