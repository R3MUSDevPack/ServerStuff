@model r3mus.ViewModels.ApplicationReviewViewModel

@using (Html.BeginForm("ReviewApplication", "Recruitment"))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Application</h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.NewReviewItem.Status, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EnumDropDownListFor(m => m.NewReviewItemStatus)
                @Html.ValidationMessageFor(model => model.NewReviewItemStatus)
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NewReviewItem.Notes, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.NewReviewItem.Notes, new { style = "max-width:1000px; width: 500px; height:200px; max-width:100%;" })
                @Html.ValidationMessageFor(model => model.NewReviewItem.Notes)
            </div>
        </div>

        <div style="visibility:hidden">
            <div class="form-group">
                @Html.LabelFor(model => model.NewReviewItem.Reviewer.UserName, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NewReviewItem.Reviewer.UserName)
                    @Html.ValidationMessageFor(model => model.NewReviewItem.Reviewer.UserName)
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.NewReviewItem.ApplicantId, new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.NewReviewItem.ApplicantId)
                    @Html.ValidationMessageFor(model => model.NewReviewItem.ApplicantId)
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}
