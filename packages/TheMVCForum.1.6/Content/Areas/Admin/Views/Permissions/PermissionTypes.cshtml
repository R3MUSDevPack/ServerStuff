@using MVCForum.Domain.Constants
@model MVCForum.Website.Areas.Admin.ViewModels.ChoosePermissionsViewModel
@{
    ViewBag.Title = "Permission Types";
}
<div class="permissiontypes">
    
    <div class="row">

        <div class="col-md-6">
            <h3>Add Permissions</h3>
            <p>If you want to add your own custom permission, add it into the database using the button below.</p>
            <p>Then you can set the permission based on the role. Once that is done, you just pull out the permission from the PermissionSet using the name as the key</p>

            <p><a href="@Url.Action("AddType")" class="btn-mvc btn-mvc-green">Add New Permission Type</a></p>
        </div>

        <div class="col-md-6">

            <p><strong style="color: maroon; text-decoration: underline;">WARNING:</strong> Deleting permission types that are in use will break your forum, be VERY careful.</p>

            <div class="panel panel-default">
                <div class="panel-heading">
                    Current Permission Types
                </div>
                <ul class="list-group">
                    @foreach (var permission in Model.Permissions)
                    {
                        <li class="list-group-item">
                            <span class="badge">
                                <a href="@Url.Action("DeletePermission", "Permissions", new { id = permission.Id })" onclick="return confirm('Are you sure?')"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a>
                            </span>
                            @permission.Name
                        </li>
                    }
                </ul>
            </div>

        </div>

    </div>

</div>
